};

const ExampleAtribute = atribute{
    // code ...
};

const ExampleClassUsingAtributes = class{
    priv_field: string,
    pub somefield: string,

    ExampleClass(somevalue:string){
       this.priv_field = somevalue;
    }

    destroyer aCustomWayToDestroyAClass(){
        // do something...
    }

    // Implementing atributes in a class using special functions, looks cleaner
    @impl({
